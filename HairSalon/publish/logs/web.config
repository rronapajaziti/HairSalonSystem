<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- Enables detailed error messages for debugging -->
      <httpErrors errorMode="Detailed" />
      <handlers>
        <!-- Configures ASP.NET Core to handle all requests -->
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore 
        processPath="dotnet" 
        arguments=".\HairSalon.dll" 
        stdoutLogEnabled="true" 
        stdoutLogFile=".\logs\stdout" 
        hostingModel="inprocess" />
    </system.webServer>
  </location>
  <system.web>
    <!-- Removed authentication settings as JWT is handled by the app itself -->
    <authorization>
      <allow users="*" />
    </authorization>
  </system.web>
</configuration>
